# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321
SUPER_ADMIN_ID=123456789

# Database Configuration
DATABASE_URL=postgresql+asyncpg://uc_bot:password@localhost:5432/uc_bot_db
DATABASE_ECHO=false

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Web Admin Panel
ADMIN_PANEL_SECRET_KEY=your_super_secret_key_here
ADMIN_PANEL_HOST=0.0.0.0
ADMIN_PANEL_PORT=8000
ADMIN_PANEL_DEBUG=false

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payment Providers
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_SANDBOX=true

# Crypto Payments
CRYPTOPAY_API_TOKEN=your_cryptopay_token
BLOCKCHAIN_API_KEY=your_blockchain_api_key

# QIWI
QIWI_SECRET_KEY=your_qiwi_secret_key
QIWI_THEME_CODE=your_theme_code

# YooMoney (ex-Yandex.Money)
YOOMONEY_CLIENT_ID=your_yoomoney_client_id
YOOMONEY_CLIENT_SECRET=your_yoomoney_secret

# PUBG Mobile API (if available)
PUBG_API_KEY=your_pubg_api_key
PUBG_API_ENDPOINT=https://api.pubgmobile.com

# Localization
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,en,ar

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
TWO_FACTOR_ISSUER_NAME=UC Bot Admin

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO
LOG_FILE=logs/uc_bot.log

# Business Settings
DEFAULT_CURRENCY=USD
UC_PRICE_PER_UNIT=0.01
MIN_ORDER_AMOUNT=1
MAX_ORDER_AMOUNT=50000

# Referral System
REFERRAL_BONUS_PERCENT=5
REFERRAL_MIN_ORDER=10

# Anti-Fraud
MAX_ORDERS_PER_HOUR=5
SUSPICIOUS_ORDER_THRESHOLD=100

# File Storage
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880  # 5MB