# ========== ОСНОВНЫЕ НАСТРОЙКИ ==========
# Скопируйте этот файл в .env и заполните своими данными

# ========== ТЕЛЕГРАМ ==========
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# ID вашего канала (можно узнать у @userinfobot)
TELEGRAM_CHANNEL_ID=@your_channel_name

# Ваш Telegram ID (получите у @userinfobot)
ADMIN_USER_ID=0

# ========== ИИ ИНТЕГРАЦИЯ ==========
# Claude API ключ (https://console.anthropic.com/)
CLAUDE_API_KEY=your_claude_api_key_here

# GigaChat (https://developers.sber.ru/portal/products/gigachat)
GIGACHAT_CLIENT_ID=your_gigachat_client_id
GIGACHAT_CLIENT_SECRET=your_gigachat_client_secret

# OpenAI (опционально - https://platform.openai.com/)
OPENAI_API_KEY=

# ========== БАЗА ДАННЫХ ==========
DATABASE_URL=sqlite:///news_bot.db

# ========== ПАРСИНГ ==========
PARSING_INTERVAL=30
MAX_NEWS_PER_BATCH=5
USE_AI_PROCESSING=true
AUTO_PUBLISH=false

# ========== ЛОГИРОВАНИЕ ==========
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# ========== ПРОКСИ (опционально) ==========
USE_PROXY=false
PROXY_URL=